--particulas
local InsertService = game:GetService("InsertService")

-- ID do seu ParticleEmitter exportado
local PARTICLE_ID = 127978175466497

game.Players.PlayerAdded:Connect(function(player)
	player.CharacterAdded:Connect(function(character)
		local head = character:WaitForChild("Head")

		-- Carrega o ParticleEmitter do asset
		local success, asset = pcall(function()
			return InsertService:LoadAsset(PARTICLE_ID)
		end)

		if success and asset then
			local particle = asset:FindFirstChildWhichIsA("ParticleEmitter", true)
			if particle then
				local clone = particle:Clone()

				-- üî• Configura√ß√µes adicionais
				clone.Lifetime = NumberRange.new(2, 9) -- tempo de vida (m√≠n, m√°x)
				clone.Speed = NumberRange.new(3, 10)    -- velocidade (m√≠n, m√°x)
				clone.Size = NumberSequence.new({
					NumberSequenceKeypoint.new(0, 0.100), -- come√ßa pequeno
					NumberSequenceKeypoint.new(0.100, 1.5), -- cresce no meio
					NumberSequenceKeypoint.new(1, 0)    -- some no final
				})

				clone.Rate = 100 -- part√≠culas por segundo
				clone.Parent = head
			end
			asset:Destroy()
		else
			warn("Falha ao carregar ParticleEmitter: " .. PARTICLE_ID)
		end
	end)
end)
--musica
local Sound = Instance.new("Sound")
Sound.Name = "BackgroundMusic"
Sound.SoundId = "rbxassetid://1839246711"
Sound.Volume = 1
Sound.Looped = true -- toca em loop
Sound.Parent = game.SoundService

Sound:Play()
--parts
local TEXTURE_ID = "rbxassetid://136137552420192"


local function applyTexture(part)
	if part:IsA("BasePart") then

		for _, child in ipairs(part:GetChildren()) do
			if child:IsA("Texture") then
				child:Destroy()
			end
		end


		local texture = Instance.new("Texture")
		texture.Texture = TEXTURE_ID
		texture.StudsPerTileU = 4 -- ajuste do tamanho horizontal
		texture.StudsPerTileV = 4 -- ajuste do tamanho vertical
		texture.Face = Enum.NormalId.Top -- voc√™ pode aplicar em uma face espec√≠fica ou criar 6 faces
		texture.Parent = part
	end
end

for _, part in ipairs(workspace:GetDescendants()) do
	applyTexture(part)
end

workspace.DescendantAdded:Connect(function(part)
	applyTexture(part)
end)
